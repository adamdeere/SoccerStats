@page
@model RazorPizza.Pages.PizzaModel
@{
}

<h1>Pizza!</h1>

<div class="text-center">

    <!-- Write your comments here -->
    <div class="maintext">
        <h1 class="display-4 text-capitalize text-black">
            Choose your pizza</h1>
            <h4>Choose one or try the pizza builder</h4>
            <p class="smalltext"> <i>only one pizza per order</i></p>
    </div>
    <!-- Write your comments here -->
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row customdiv">
                    <div class="col-4">
                        <img src="~/images/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center"> 

                        <div class="align-middle customtext">
                            <h3 style="text-align:left">Create your own Pizza! </h3>
                            <p style="text-align:left"> 
                                Make your own pizza with out pizza maker.
                                click on the button to make this happen
                            </p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try Now! </a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in @Model.fakeDB)
            {
                var image = $"~/images/{item.ImageTitle}.png";
                <div class="col-4 mb-5">
                    <img src=@image class="w-100" asp-append-version="true"/>
                    <a class="btn btn-primary mt-1" asp-area="" 
                    asp-page="Checkout/Checkout"
                    asp-route-ImageTitle="@item.ImageTitle"
                    asp-route-PizzaPrice="@item.Price"
                    asp-route-PizzaName="@item.PizzaName">Get this Pizza</a>
                </div>
            }
       
        </div>
    </div>
</div> 

