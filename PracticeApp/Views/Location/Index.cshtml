@model IEnumerable<PracticeApp.Models.LocationModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a class="btn btn-primary custom-button" asp-controller="Location" asp-action="Create">Create </a>

<div class="accordion accordion-flush" id="accordionFlush">
    @if (Model.Count() > 0)
    {
        @await Html.PartialAsync("_LocationAccordianPartial.cshtml", Model)
    }
    else
    {
        <p>Could not find any locations to match your search parameter. Please try again</p>
    }

</div>

