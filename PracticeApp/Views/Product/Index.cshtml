@model IEnumerable<PracticeApp.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="align-content-center">
        <h1>Products</h1>

        <div class="container">

            <a class="btn btn-primary custom-button" asp-action="Create">
                Create new
            </a>

            <button class="btn btn-primary custom-button" data-bs-toggle="modal" data-bs-target="#skuModal" class="nav-link dropdown-item" asp-area="">
                Search
            </button>
        </div>

        <div class="row">
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="card custom-card-style">
                        <form>
                            <input class="card-img-top"
                                   src="~/images/placeholder.png"
                                   type="image"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.SKUCode" />

                        </form>
                        <div class="card-body">
                            <h5 class="card-title">Product</h5>
                            <div class="custom-text">
                                @Html.DisplayNameFor(model => model.SKUCode) :
                                @Html.DisplayFor(modelItem => item.SKUCode)
                            </div>

                            <div class="custom-text">
                                @Html.DisplayNameFor(model => model.Description) :
                                @Html.DisplayFor(modelItem => item.Description)
                            </div>

                            <div class="custom-text">
                                @Html.DisplayNameFor(model => model.Weight) :
                                @Html.DisplayFor(modelItem => item.Weight)
                            </div>

                            <div class="custom-text">
                                @Html.DisplayNameFor(model => model.Height) :
                                @Html.DisplayFor(modelItem => item.Height)
                            </div>

                            <div class="custom-text">
                                @Html.DisplayNameFor(model => model.Length) :
                                @Html.DisplayFor(modelItem => item.Length)
                            </div>

                            <div class="custom-text">

                                @if (item.Items != null)
                                {
                                    var expectedQTY = 0.0;
                                    @foreach (var items in item.Items)
                                    {
                                        expectedQTY += items.Quantity;
                                    }
                                    <label for="QTY">Expected Intake: </label> @expectedQTY
                                }
                            </div>

                            <a class="btn btn-danger custom-button"
                               asp-controller="Product"
                               asp-action="Delete"
                               asp-route-id="@item.SKUCode">
                                Delete
                            </a>
                        </div>
                    </div>
                }
            }
            else{
                <p>There are no items that match your search. Please try again</p>
            }
           
        </div>
    </div>
</div>


<!-- Modal for sku searching. Placed here to save a seprate view -->
<div class="modal fade" id="skuModal" tabindex="-1" aria-labelledby="skuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen-sm-down">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="skuModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">

                    <form method="post">
                        <label for="SKUCode">SKU code</label>
                        <input type="text" id="sku" name="sku" placeholder="Enter your SKU code" />
                        <input class="btn btn-primary custom-button" type="submit" asp-action="Index" asp-controller="Product" id="sku" name="sku" />
                    </form>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
