@model IEnumerable<CountryModel>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <h4 style="text-align: center;">Customize your Kendo Cap</h4>
        <div id="cap" class="black-cap"></div>
        
        <label for="size">Cap Size:</label>
        <div class="btn-group mr-2">
            <kendo-combobox name="CountrySelectBox"
                            bind-to="Model"
                            datatextfield="CountryName"
                            datavaluefield="Id"
                            placeholder="Select Country"
                            template-id="TemplateCountry"
                            style="width:260px">

            </kendo-combobox>
        </div>

        <button class="k-button k-button-solid-primary k-button-solid k-button-md k-rounded-md" id="get" style="margin-top: 2em; float: right;">Customize</button>
    </div>
</div>

<script id="TemplateCountry" type="text/x-kendo-template">
       <div class="row" style="margin-left: 5px">
        <img src="@Url.RouteUrl("#:data.FlagURL#")" class="li-avatar rounded mx-auto"/>
        <span style="margin-left: 5px">#:data.FullName#</span>
    </div>
</script>

<style>
    #cap {
        width: 242px;
        height: 225px;
        margin: 20px auto;
        background-image: url('@Url.Content("~/shared/web/dropdownlist/cap.png")');
        background-repeat: no-repeat;
        background-color: transparent;
    }

    .black-cap {
        background-position: 0 0;
    }

    .grey-cap {
        background-position: 0 -225px;
    }

    .orange-cap {
        background-position: 0 -450px;
    }
</style>