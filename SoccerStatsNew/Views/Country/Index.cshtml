@model IEnumerable<SoccerStatsNew.Models.CountryModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container align-content-center">
    <h1>Countries</h1>
    <h4><i>Click on a flag to view the countries leagues</i></h4>
    <div class="row text-select">
        @foreach (var item in Model)
        {
            <div class="col-2 mb-5 align-content-center">
                <form>
                    <input type="image" src="@item.FlagURL" class="w-100"
                           asp-controller="League"
                           asp-action="Details"
                           asp-route-id="@item.CountryCode">
                </form>
                <p>@item.Name</p>
            </div>
        }
    </div>
</div>
