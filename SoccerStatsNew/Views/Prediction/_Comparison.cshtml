@model SoccerStatsData.RequestModels.PredictionRequestFiles.PredictionComparison

@{
    var lol = ChartSeriesLabelsPosition.InsideEnd;
    var homeColour = "\\#E51AD6";
    var awayColour = "\\#1AE529";
}

<script id="tmplChartAtt" type="text/html">
    <kendo-chart name="chartAtt" is-in-client-template="true">
          <chart-title text="Att"></chart-title>
          <chart-legend visible="true"></chart-legend>
          <series-defaults type="ChartSeriesType.Pie"></series-defaults>

           <series>
            <series-item start-angle="150" name="Attack" data='new dynamic[] {
                new {category="Home",value=Model.Att.Home,color=homeColour},
                new {category="Away",value=Model.Att.Away,color=awayColour},
            }'>
            <labels visible="true" position="@lol" background="transparent"></labels>
            </series-item>
        </series>

      </kendo-chart>
</script>

