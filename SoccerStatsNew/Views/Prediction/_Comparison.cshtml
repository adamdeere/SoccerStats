}

<script id="tmplChart" type="text/html">
    <kendo-chart name="chart" theme="sass" is-in-client-template="true">
                   <chart-title text="Att"></chart-title>

                   <series-defaults type="ChartSeriesType.Pie"
                                    gap=0.06>

                       <stack enabled=true />
                   </series-defaults>

                   <series>
                       <series-item data="Model.Att.Home"
                                    name="AttHome"
                                    color=\\#CC3458
                                    opacity="0.7">

                       </series-item>
                       <series-item data="Model.Att.Away"
                                    name="AttAway"
                                    color=\\#35C473
                                    opacity="0.7">

                       </series-item>
                   </series>
                   <chart-legend position="ChartLegendPosition.Bottom">

                   </chart-legend>
               </kendo-chart>
</script>

